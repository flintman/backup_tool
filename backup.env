# Backup Manager Configuration (.env)
# Format: KEY=VALUE. Lines beginning with # are comments.

# Flags
IS_DOCKER=False
IS_MYSQL=False
IS_NEXTCLOUD=False

# Server identity
SERVER_NAME=SERVERX-server

# SSH backup server
BACKUP_SERVER_USERNAME=USERNAME
BACKUP_SERVER_PASSWORD=PASSWORD
BACKUP_SERVER_IP=127.0.0.1
# If empty, defaults to /home/USER/backups/<SERVER_NAME>
BACKUP_SERVER_DEST=

# Local backup folders (created in working dir)
BACKUP_FILES_DIR=files_to
BACKUP_SQL_DIR=mysql
BACKUP_FOLDERS=

# MySQL (host-side, non-docker)
MYSQL_USERNAME=root
MYSQL_PASSWORD=secret

# Telegram bot
BOT_ID=
CHANNEL_ID=

# Nextcloud maintenance command paths
NEXTCLOUD_OCC_USER=www-data
NEXTCLOUD_OCC_PATH=/var/www/html/nc_here/occ

# Databases for docker containers
# Use indexed variables like below (0..N contiguous). Missing indices ignored.
# DATABASES_<i>_DOCKER_NAME=container-name
# DATABASES_<i>_NAME=db
# DATABASES_<i>_USER=user
# DATABASES_<i>_PASSWORD=pass
